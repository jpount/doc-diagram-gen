{
  "output": {
    "filePath": "output/reports/repomix-summary.md",
    "style": "markdown",
    "headerText": "# Codebase Summary\nGenerated by Repomix for AI-optimized analysis",
    "removeComments": false,
    "removeEmptyLines": false,
    "showLineNumbers": false,
    "copyToClipboard": false
  },
  "include": [
    "**/*.java",
    "**/*.cs",
    "**/*.ts",
    "**/*.js",
    "**/*.jsx",
    "**/*.tsx",
    "**/*.py",
    "**/*.go",
    "**/*.rb",
    "**/*.php",
    "**/*.swift",
    "**/*.kt",
    "**/*.scala",
    "**/*.rs",
    "**/*.cpp",
    "**/*.c",
    "**/*.h",
    "**/*.hpp",
    "**/*.xml",
    "**/*.yaml",
    "**/*.yml",
    "**/*.json",
    "**/*.properties",
    "**/*.sql",
    "**/*.sh",
    "**/*.bash",
    "**/*.ps1",
    "**/*.dockerfile",
    "**/Dockerfile",
    "**/*.tf",
    "**/*.hcl"
  ],
  "ignore": {
    "useGitignore": true,
    "useDefaultPatterns": true,
    "customPatterns": [
      "**/node_modules/**",
      "**/target/**",
      "**/dist/**",
      "**/build/**",
      "**/.git/**",
      "**/vendor/**",
      "**/packages/**",
      "**/*.min.js",
      "**/*.min.css",
      "**/coverage/**",
      "**/logs/**",
      "**/tmp/**",
      "**/temp/**",
      "**/.idea/**",
      "**/.vscode/**",
      "**/__pycache__/**",
      "**/*.pyc",
      "**/*.class",
      "**/*.jar",
      "**/*.war",
      "**/output/**",
      "**/framework/**",
      "**/.mcp-cache/**"
    ]
  },
  "security": {
    "enableSecurityCheck": true,
    "securityCheckThreshold": "high"
  },
  "compression": {
    "enabled": true,
    "level": "high",
    "removeWhitespace": true,
    "minifyCode": false,
    "tokenLimit": 100000
  },
  "codeProcessing": {
    "enableTreeSitter": true,
    "extractImports": true,
    "extractFunctions": true,
    "extractClasses": true,
    "includeMetadata": true
  },
  "reporting": {
    "generateSummary": true,
    "includeFileTree": true,
    "includeTokenCount": true,
    "includeLanguageStats": true,
    "includeDependencies": true,
    "includeComplexityMetrics": true
  }
}